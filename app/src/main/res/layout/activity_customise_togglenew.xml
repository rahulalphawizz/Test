<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomiseToggleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomiseToggleActivity">


    <LinearLayout
        android:id="@+id/llAdditionalDetailsExpanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >

        <View
            android:id="@+id/viewDivider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D9E6"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:text="@string/csmAsmVisit"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchCSMVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/App_TextStyle"
                    android:text="@string/service_team_visit"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchServiceTeamVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTestimonials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/App_TextStyle"
                    android:text="@string/testimonials_shared"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTestimonials"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:text="@string/demo"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchDemo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtTenderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"

                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTenderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@null"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAMC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:text="@string/AMC"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAMC"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="bottom"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTelematics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/App_TextStyle"
                    android:text="@string/telematics"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchTelematics"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/App_TextStyle"
                    android:text="@string/plant_visit"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/switchPlanVisit"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/App_TextStyle"
                    android:text="@string/driver_training"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/switchDrivingTraing"
                    android:layout_marginTop="10dp"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    style="@style/App_TextStyle"
                    android:text="@string/eicher_sure"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/search18" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/switEicherSure"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                style="@style/App_TextStyle"
                android:text="Extended Warranty"
                android:textAlignment="textStart"
                android:textSize="@dimen/search18" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/switchExtendWarranty"
                android:theme="@style/SCBSwitch" />

        </LinearLayout>

    </LinearLayout>
    //partne services

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtAdditionalDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/App_TextStyle"
            android:gravity="center_vertical"
            android:text="@string/partner_services"
            android:textSize="@dimen/search18"
            />

        <TextView
            android:id="@+id/txtErrAdditionalDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAdditionalDetails"
            android:gravity="bottom"
            android:text="@string/please_enter_all_mandetory_fileds"
            android:textColor="@color/red"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgAddnDetailsArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/ic_arrow_up" />

    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_partner_services"
        android:orientation="vertical"
        android:visibility="visible"
        >

        //complete fleet
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textSize="@dimen/search18"
                style="@style/App_TextStyle"
                android:gravity="start|center"
                android:text="@string/complete_fleet_tracking"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".7"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_toggle"
                android:weightSum="2"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="130dp"

                    android:id="@+id/tv_completeFleet_notiterested"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:text="Not Interested"
                    />
                <View
                    android:layout_width="1dp"
                    android:background="#111"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_completeFleet_interested"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:gravity="center"
                    android:text="Interested"
                    />
            </LinearLayout>

        </LinearLayout>


        //fast tag
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textSize="@dimen/search18"
                style="@style/App_TextStyle"
                android:gravity="start|center"
                android:text="@string/fast_tag"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".7"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_toggle"
                android:weightSum="2"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="130dp"

                    android:id="@+id/tv_fast_tag_notiterested"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:text="Not Interested"
                    />
                <View
                    android:layout_width="1dp"
                    android:background="#111"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_fast_tag_interested"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:gravity="center"
                    android:text="Interested"
                    />
            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textSize="@dimen/search18"
                style="@style/App_TextStyle"
                android:gravity="start|center"
                android:text="Disount on Diesel"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".7"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_toggle"
                android:weightSum="2"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="130dp"

                    android:id="@+id/tv_discount_diesel_notiterested"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:text="Not Interested"
                    />
                <View
                    android:layout_width="1dp"
                    android:background="#111"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_discount_diesel_interested"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:gravity="center"
                    android:text="Interested"
                    />
            </LinearLayout>

        </LinearLayout>



        //load board
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:textSize="@dimen/search18"
                style="@style/App_TextStyle"
                android:gravity="start|center"
                android:text="@string/load_board"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=".7"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_toggle"
                android:weightSum="2"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="130dp"

                    android:id="@+id/tv_load_board_notiterested"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:text="Not Interested"
                    />
                <View
                    android:layout_width="1dp"
                    android:background="#111"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_load_board_interested"
                    android:layout_weight="1"
                    style="@style/App_TextStyle"
                    android:textSize="@dimen/search18"
                    android:gravity="center"
                    android:text="Interested"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>

    </ScrollView>

</LinearLayout>